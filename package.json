{
  "name": "neon-workspace",
  "private": true,
  "scripts": {
    "prettier": "prettier -w \"**/*.{js,json,ts,yml}\"",
    "prettier:check": "prettier -c \"**/*.{js,json,ts,yml}\"",
    "test": "npm run test:rust && npm run test:js",
    "test:rust": "cargo neon-test",
    "test:js": "npm test --workspaces --if-present"
  },
  "workspaces": [
    "pkgs/*",
    "test/*"
  ],
  "devDependencies": {
    "prettier": "^2.5.1"
  }
}
